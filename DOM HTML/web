    <script>
        var x = document.getElementsByClassName("items")
        var y = document.getElementById("divaa1")
        function myFunction() {
            if (x.style.display == none) {
                y.style.display == block;
            } else if(x.style.display !== none){
                y.style.display == none;
            } else {
                x.style.display == block
            }
        };
